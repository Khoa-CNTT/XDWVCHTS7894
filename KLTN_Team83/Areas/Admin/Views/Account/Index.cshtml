@model List<Account>

<div class="card shadow border-0 mt-4">
	<div class="card-header ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary py-2">ACCOUNT LIST</h2>
			</div>
		</div>
		<div class="card-body">
			<div class="row pt-4 pb-3">
				<div class="col-6">
					
				</div>
				<div class="col-6 text-end">
					<a asp-controller="Account" asp-action="Create" class="btn btn-primary">
						<i class="bi bi-plus-circle"></i> Create New
					</a>
				</div>
			</div>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Email</th>
						<th>Password</th>
						<th>Role</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var obj in Model.OrderByDescending(u => u.role))
					{
						<tr>
							<td>@obj.email</td>
							<td>@obj.passWord</td>
							<td>@obj.role</td>
							<td>
								<div class="w-75 btn-group" role="group">
									<a asp-controller="Account" asp-action="Edit" asp-route-id="@obj.id_Acc" class="btn btn-primary mx-2">
										<i class="bi bi-pencil-square"></i>Edit
									</a>
									<a asp-controller="Account" asp-action="Delete" asp-route-id="@obj.id_Acc" class="btn btn-danger mx-2">
										<i class="bi bi-trash-fill"></i>Delete
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
