@model KLTN_Team83.Models.ViewModels.PlanVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Information - Wellness</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Assumed Navbar Here (Not Modified) -->
    <div class="product-detail-wrapper">
        <div class="product-detail-header">
            <h1>🌿 User Information</h1>
            <p class="text-muted">Update your personal details below</p>
        </div>
        <form method="post" class="mb-5" asp-action="Plan" asp-controller="Home">
            @* Đảm bảo asp-controller="Home" *@
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="card shadow border-0 rounded-3 overflow-hidden">
                    <div class="card-header text-white py-4" style="background: linear-gradient(135deg, #2d7d46, #4CAF50);">
                        <div class="row px-4 align-items-center">
                            <div class="col-12 text-center">
                                <h3 class="pt-2 mb-0">TÍNH BMI & NHẬN GỢI Ý SỨC KHỎE</h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-7 pb-4">
                                    <div class="row">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-dark">Nhập thông tin của bạn:</span>
                                        </h4>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

                                    <div class="row my-2">
                                        <div class="col-3">
                                            <label asp-for="Gender" class="fw-semibold text-muted"></label>
                                        </div>
                                        <div class="col-9">
                                            <select asp-for="Gender" class="form-select">
                                                <option value="">-- Chọn giới tính --</option>
                                                <option value="Nam">Nam</option>
                                                <option value="Nữ">Nữ</option>
                                            </select>
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-2">
                                        <div class="col-3">
                                            <label asp-for="Weight" class="fw-semibold text-muted"></label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Weight" type="number" step="0.1" class="form-control" placeholder="Ví dụ: 65.5" />
                                            <span asp-validation-for="Weight" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-2">
                                        <div class="col-3">
                                            <label asp-for="Height" class="fw-semibold text-muted"></label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Height" type="number" step="0.1" class="form-control" placeholder="Ví dụ: 170" />
                                            <span asp-validation-for="Height" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-12 text-center">
                                            <button type="submit" class="btn btn-lg btn-success bg-gradient text-uppercase fw-semibold px-5">Tính BMI & Xem Gợi Ý</button>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.IsSubmitted && ViewData.ModelState.IsValid && Model.BMI.HasValue)
                                {
                                    <div class="col-12 col-lg-5 ps-lg-4 mt-4 mt-lg-0">
                                        <div class="border p-3 rounded-3 bg-light">
                                            <h4 class="text-primary">Kết quả của bạn:</h4>
                                            <h2 class="display-5 fw-bold text-success">BMI: @Model.BMI.Value.ToString("0.00")</h2>
                                            <p class="lead">Phân loại: <span class="fw-semibold">@Model.BmiCategory</span></p>
                                            <hr />

                                            @if (Model.NutritionalSuggestions.Any())
                                            {
                                                <h5 class="mt-3 text-success"><i class="bi bi-egg-fried"></i> Gợi ý Dinh dưỡng:</h5>
                                                <ul class="list-unstyled">
                                                    @foreach (var suggestion in Model.NutritionalSuggestions)
                                                    {
                                                        <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i>@suggestion</li>
                                                    }
                                                </ul>
                                            }

                                            @if (Model.ExerciseSuggestions.Any())
                                            {
                                                <h5 class="mt-3 text-info"><i class="bi bi-bicycle"></i> Gợi ý Vận động:</h5>
                                                <ul class="list-unstyled">
                                                    @foreach (var suggestion in Model.ExerciseSuggestions)
                                                    {
                                                        <li class="mb-1"><i class="bi bi-check-circle-fill text-info me-2"></i>@suggestion</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    </div>
                                }
                                else if (Model.IsSubmitted && !ViewData.ModelState.IsValid) // Trường hợp submit nhưng dữ liệu lỗi
                                {
                                    <div class="col-12 col-lg-5 ps-lg-4 mt-4 mt-lg-0">
                                        <div class="alert alert-danger">Vui lòng kiểm tra lại thông tin bạn đã nhập.</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Toast Notification (Upper Right Corner) -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="updateToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Information updated successfully!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- Assumed Footer Here (Not Modified) -->

    <style>
        /* Main wrapper */
        .product-detail-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Product detail header */
        .product-detail-header {
            text-align: center;
            margin-bottom: 2rem;
            background: linear-gradient(135deg, #2d7d46, #4CAF50);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

            .product-detail-header h1 {
                font-size: 2rem;
                font-weight: 800;
                margin-bottom: 0.5rem;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            }

            .product-detail-header p {
                font-size: 1.1rem;
                color: #666;
            }

        /* Card styling */
        .card {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            border-radius: 0.3rem 0.3rem 0 0;
        }

        .form-control, .form-select {
            border-color: #ced4da;
            transition: border-color 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #2d7d46;
                box-shadow: 0 0 5px rgba(45, 125, 70, 0.3);
            }

        .btn-primary {
            background-color: #2d7d46;
            border-color: #2d7d46;
        }

            .btn-primary:hover {
                background-color: #1a5c2e;
                border-color: #1a5c2e;
            }

        .btn-outline-light {
            color: #fff;
            border-color: #fff;
        }

            .btn-outline-light:hover {
                color: #2d7d46;
                background-color: #fff;
                border-color: #fff;
            }

        /* Media Query */
        @@media (max-width: 768px) {
            .product-detail-wrapper {
                padding: 1rem 0.5rem;
            }

            .product-detail-header h1 {
                font-size: 1.6rem;
            }

            .product-detail-header p {
                font-size: 1rem;
            }

            .btn {
                width: 100%;
                margin-bottom: 1rem;
            }

            .row.align-items-center {
                text-align: center;
            }
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('form').addEventListener('submit', function(event) {
            event.preventDefault();
            fetch(this.action, {
                method: 'POST',
                body: new FormData(this),
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (response.ok) {
                    const toast = new bootstrap.Toast(document.getElementById('updateToast'));
                    toast.show();
                } else {
                    alert('Failed to update information. Please try again.');
                }
            })
            .catch(error => {
                alert('An error occurred. Please try again.');
            });
        });
    </script>
</body>
</html>