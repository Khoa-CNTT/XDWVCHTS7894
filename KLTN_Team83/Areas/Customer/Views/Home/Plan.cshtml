@model ApplicationUser
<div class="align-content-center" style=" width:100%;">
<form method="post" style=" width:50%;">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-gradient text-light ml-0 py-4" style="background-color: #e0e8d5;">
				<div class="row px-4">
					<div class="col-6">
						<h3 class="pt-2 " style="color:#1d3b2a;">
							INFORMATION USER
						</h3>
					</div>
					<div class="col-6 text-end text-light">
						<a asp-action="Index" class="btn btn-outline-danger  btn-sm">Back to Home</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 pb-10">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-dark">Thông tin cá nhân:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Name</label>
								</div>
								<div class="col-9">
										<input asp-for="Name" disabled class="form-control" placeholder="Please enter your name." />
										<span asp-validation-for="Name" class="text-danger"></span>
									
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Giới tính</label>
								</div>
								<div class="col-9">
									<select asp-for="Gender" class="form-select">
										<option value="">-- Chọn giới tính --</option>
										<option value="Nam">Nam</option>
										<option value="Nữ">Nữ</option>
										<option value="Khác">Khác</option>
									</select>
									<span asp-validation-for="Gender" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Cân Nặng (kg)</label>
								</div>
								<div class="col-9">
									<input asp-for="Weight" type="number" step="0.1" class="form-control" placeholder="Cân nặng (kg)" />
									<span asp-validation-for="Weight" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Chiều Cao (cm)</label>
								</div>
								<div class="col-9">
									<input asp-for="Height" type="number" step="0.1" class="form-control" placeholder="Chiều cao (cm)" />
									<span asp-validation-for="Height" class="text-danger"></span>
								</div>
							</div>
							
						</div>
						</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">
							Estimate Arrival Date:
							@DateTime.Now.AddDays(0).ToShortDateString()
						</p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-success form-control" style="background-color: #1e4d2b;">Update</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
</div>