@model List<Blog>


<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1 class="text-primary">
				Blog List
			</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Blog" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped" >
		<thead>
			<tr>
				<th>Title</th>
				<th>Content</th>
				<th>Image</th>
				<th>Created At</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.OrderByDescending(u=>u.ngayTao))
			{
				<tr>
					<td>@obj.tilte</td>
					<td>@obj.content</td>
					<td>@obj.img</td>
					<td>@obj.ngayTao.ToString("dd/MM/yyyy")</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Blog" asp-action="Edit" asp-route-id="@obj.id_Blog" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i>Edit
							</a>
							<a asp-controller="Blog" asp-action="Delete" asp-route-id="@obj.id_Blog" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill"></i>Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>