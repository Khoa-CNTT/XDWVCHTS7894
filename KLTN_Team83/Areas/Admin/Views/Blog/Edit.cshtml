@model Blog

<div class="card shadow border-0 mt-4">
	<div class="card-header ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary py-2">Edit Blog</h2>
			</div>
		</div>
		<div class="card-body">
			<form method="post">
				<input asp-for="id_Blog" hidden />
				<div class="row">
					<div class="col-10">
						<div class="border p-3">
							<div class="form-floating py-2 col-12">
								<label asp-for="tilte" class="ms-2">Tiêu Đề</label>
								<input asp-for="tilte" class="form-control border-0 shadow" />
								<span asp-validation-for="tilte" class="text-danger"></span>
							</div>
							<div class="py-2 col-12">
								<label asp-for="content" class="ms-2 text-muted">Nội Dung</label>
								<textarea asp-for="content" class="form-control border-0 shadow">
						</textarea>
							</div>
							<div class="form-floating py-2 col-12">
								<label asp-for="img" class="ms-2"> Hình ảnh</label>
								<input type="file" name="file" class="form-control border-0 shadow" />
								<span asp-validation-for="img" class="text-danger"></span>
								@* <button type="submit">Upload</button> *@
							</div>
							<div class="form-floating py-2 col-12">
								<label asp-for="id_TypeBlog" class="ms-2">Type Blog</label>
								<input asp-for="id_TypeBlog" class="form-control border-0 shadow" />
								<span asp-validation-for="id_TypeBlog" class="text-danger"></span>
							</div>

							@* thẻ tông kết lỗi: *@
							<div asp-validation-summary="ModelOnly"></div>

							<div class="row mt-3">
								<div class="col-6 col-md-3">
									<button type="submit" class="btn btn-primary form-control" style="width: 150px">Update</button>

								</div>
								<div class="col-6 col-md-3">
									<a asp-controller="Blog" asp-action="Index" class="btn btn-secondary border form-control" style="width:150px">
										Back to List
									</a>
								</div>
							</div>
						</div>
					</div>
					<div class="col-2">
						@* <img src="@Model.img" style="width:150px; border-radius: 5px; border:1px solid #bbb9b9" /> *@
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
