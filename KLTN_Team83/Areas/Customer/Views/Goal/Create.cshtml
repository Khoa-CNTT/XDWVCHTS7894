<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<GoalType>()" class="form-control"></select>
    </div>
    <div class="mb-3">
        <label asp-for="TargetValue" class="form-label"></label>
        <input asp-for="TargetValue" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TargetDate" class="form-label"></label>
        <input asp-for="TargetDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>