<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KLTN_Team83</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KLTN_Team83.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="~/css/chatbox.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-white py-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <span class="fw-bold text-dark">WellNess</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Plan">Plans</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Index">Blogs</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <div>
                            <a class="login" asp-controller="Account" asp-action="Login">Đăng nhập</a> |
                            <a asp-controller="Account" asp-action="Register">Đăng kí</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container">
        
            @RenderBody()
        
    </div>
    <div id="gemini-chatbox">
        <div id="chatbox-header">
            <span>Chat Dinh Dưỡng</span>
            <button id="chatbox-close-btn">×</button>
        </div>
        <div id="chatbox-messages">
            <!-- Tin nhắn sẽ được thêm vào đây bằng JavaScript -->
            <div class="message bot-message">Chào bạn! Tôi có thể giúp gì về dinh dưỡng?</div>
        </div>
        <div id="chatbox-input-area">
            <input type="text" id="chatbox-input" placeholder="Nhập câu hỏi của bạn...">
            <button id="chatbox-send-btn">Gửi</button>
        </div>
    </div>
    <button id="chatbox-toggle-btn">Chat</button> <!-- Nút để mở/đóng chatbox -->
        
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-left">
                <img src="your-logo.png" alt="Wellness Lifestyle" class="footer-logo">
                <p class="copyright">&copy; 2025 by DTU. Powered and secured by Team83.</p>
            </div>
            <div class="footer-right">
                <div class="social-icons">
                    <a href="your-facebook-link"><i class="fab fa-facebook-f"></i></a>
                    <a href="your-twitter-link"><i class="fab fa-twitter"></i></a>
                    <a href="your-pinterest-link"><i class="fab fa-pinterest"></i></a>
                    <a href="your-instagram-link"><i class="fab fa-instagram"></i></a>
                </div>
                <div class="footer-links">
                    <a href="#">Home</a>
                    <a href="#">Plan</a>
                    <a href="#">Services</a>
                    <a href="#">Blog</a>
                    <a href="#">About</a>
                    <a href="#">Contact</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chatbox.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Footer", required: false)
</body>
</html>


