@model Company

<div class="card shadow border-0 mt-4">
	<div class="card-header ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary py-2">@(Model.Id_Company!=0? "Update":"Create") Product</h2>
			</div>
		</div>
		<div class="card-body">
			<form method="post" class="row" enctype="multipart/form-data">
				<input asp-for="Id_Company" hidden />
				<input asp-for="Logo" hidden />
				<div class="row">
					<div class="col-10">
						<div class="border p-3">
							<div class="form-floating py-2 col-12">
								<label asp-for="Name" class="ms-2"></label>
								<input asp-for="Name" class="form-control border-0 shadow" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="py-2 col-12">
								<label asp-for="Address" class="ms-2 text-muted"></label>
								<textarea asp-for="Address" class="form-control border-0 shadow"></textarea>
								<span asp-validation-for="Address" class="text-danger"></span>
							</div>
							<div class="form-floating py-2 col-12">
								<label asp-for="PhoneNumber" class="ms-2"></label>
								<input asp-for="PhoneNumber" class="form-control border-0 shadow" />
								<span asp-validation-for="PhoneNumber" class="text-danger"></span>
							</div>
							<div class="form-floating py-2 col-12">
								<label asp-for="Logo" class="ms-2"> Hình ảnh</label>
								<input type="file" name="file" class="form-control border-0 shadow" />
								<span asp-validation-for="Logo" class="text-danger"></span>
								@* <button type="submit">Upload</button> *@
							</div>

							@* thẻ tông kết lỗi: *@
							<div asp-validation-summary="ModelOnly"></div>

							<div class="row mt-3">
								<div class="col-6 col-md-3">
									@if (Model.Id_Company != 0)
									{
										<button type="submit" class="btn btn-primary form-control" style="width: 150px">Update</button>
									}
									else
									{
										<button type="submit" class="btn btn-primary form-control" style="width: 150px">Create</button>
									}

								</div>
								<div class="col-6 col-md-3">
									<a asp-controller="Company" asp-action="Index" class="btn btn-secondary border form-control" style="width:150px">
										Back to List
									</a>
								</div>
							</div>
						</div>
					</div>
					<div class="col-2">
						<img src="@Model.Logo" width="100%" style=" border-radius: 5px; border:1px solid #bbb9b9" />
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


