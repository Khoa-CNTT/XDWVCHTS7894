@model IEnumerable<Product>


<div class=" row pb-3">
	@foreach(var product in Model){
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<div class="card-header form-control" style="width: 100%;height:240px">
							@if(product.ProductImages != null && product.ProductImages.Count() > 0)
							{
								<img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded form-control" style="width:100%; height:100%" alt="@product.NameProduct">
							}
							else
							{
								<img src="https://placehold.co/500x600/png" class="card-img-top rounded form-control" style="width:100%; height:100%" alt="@product.NameProduct">
							}
							
						</div>
						<div class="card-body pb-0" style="height:200px">
							<div class="pl-1 text-center">
								<h5 class="card-title text-dark opacity-75 text-uppercase text-center">@product.NameProduct</h5>
								<p class="card-title text-secondary text-center">@product.NCC</p>
							</div>
							<div class="pl-1">
								<p class="card-title text-dark text-opacity-75 text-center mb-0">
									Giá bán:
									<span class=" text-decoration-line-through">
										@product.Price.ToString("c")
									</span>
								</p>
							</div>
							<div class="pl-1">
								<p class="card-title text-dark text-opacity-75 text-center">
									Giá thấp nhất: 
									<span>@product.Price100.ToString("c")
									</span>
								</p>
							</div>
						</div>
						<div class="text-center">
							<a asp-action="DetailProduct"
							   asp-route-id="@product.Id_Product"
							class="btn btn-primary">View Details</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>
