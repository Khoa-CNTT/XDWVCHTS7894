@model TypeBlog

<div class="card shadow border-0 my-4">
	<div class="card-header ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary py-2">Edit TypeBlog</h2>
			</div>
		</div>
		<div class="card-body">
			<form method="post">
				<input asp-for="id_TypeBlog" hidden />
				<div class="border p-3 ">
					<div class="form-floating py-2 col-12">
						<label asp-for="Name" class="ms-2">Chuyên mục</label>
						<input asp-for="Name" class="form-control border-0 shadow" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						<label asp-for="Description" class="ms-2">Mô tả</label>
						<textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>

					@* thẻ tông kết lỗi: *@
					<div asp-validation-summary="ModelOnly"></div>

					<div class="row mt-3">
						<div class="col-6 col-md-3">
							<button type="submit" class="btn btn-primary form-control" style="width: 150px">Update</button>

						</div>
						<div class="col-6 col-md-3">
							<a asp-controller="TypeBlog" asp-action="Index" class="btn btn-secondary border form-control" style="width:150px">
								Back to List
							</a>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}