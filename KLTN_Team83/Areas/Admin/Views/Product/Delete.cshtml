@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-primary py-2">Delete Product</h2>
			</div>
		</div>
		<div class="card-body">
			<form method="post">
				<input asp-for="Id_Product" hidden />
				<div class="border p-3">
					<div class="form-floating py-2 col-12">
						<label asp-for="NameProduct" class="ms-2"></label>
						<input asp-for="NameProduct" disabled class="form-control border-0 shadow" />
					</div>
					<div class="py-2 col-12">
						<label asp-for="Description" class="ms-2 text-muted"></label>
						<textarea asp-for="Description" disabled class="form-control border-0 shadow"></textarea>
					</div>
					<div class="form-floating py-2 col-12">
						<label asp-for="NCC" class="ms-2"></label>
						<input asp-for="NCC" disabled class="form-control border-0 shadow" />
					</div>
					<div class="form-floating py-2 col-12">
						<label asp-for="Price" class="ms-2"></label>
						<input asp-for="Price" disabled class="form-control border-0 shadow" />
					</div>
					<div class="form-floating py-2 col-12">
						<label asp-for="Price50" class="ms-2"></label>
						<input asp-for="Price50" disabled class="form-control border-0 shadow" />
					</div>
					<div class="form-floating py-2 col-12">
						<label asp-for="Price100" class="ms-2"></label>
						<input asp-for="Price100" disabled class="form-control border-0 shadow" />
					</div>
					<div class="form-floating py-2 col-12">
						<label asp-for="ImgageUrl" class="ms-2"> Hình ảnh</label>
						<input type="file" disabled name="file" class="form-control border-0 shadow" />
					</div>
					<div class="form-floating py-2 col-12">
						<label asp-for="Id_Category" class="ms-2">Type Product</label>
						<input asp-for="Id_Category" disabled class="form-control border-0 shadow" />
						@* <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select"></select> *@
					</div>

					<div class="row mt-3">
						<div class="col-6 col-md-3">
							<button type="submit" class="btn btn-danger form-control" style="width: 150px">Delete</button>
						</div>
						<div class="col-6 col-md-3">
							<a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control" style="width:150px">
								Back to List
							</a>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}